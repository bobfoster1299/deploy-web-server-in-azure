{
  "variables": {
    "azure_client_id": "{{env `CLIENT_ID`}}",
    "azure_client_secret": "{{env `CLIENT_SECRET`}}",
    "azure_tenant_id": "{{env `TENANT_ID`}}",
    "azure_subscription_id": "{{env `SUBSCRIPTION_ID`}}"
  },

  "builders": [
    {
      "type": "azure-arm",
      "client_id": "{{user `azure_client_id`}}",
      "client_secret": "{{user `azure_client_secret`}}",
      "tenant_id": "{{user `azure_tenant_id`}}",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "managed_image_resource_group_name": "rob-rg",
      "managed_image_name": "rob-packer-image2",
      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "18.04-LTS",
      "location": "UK South",
      "vm_size": "Standard_B1ls",
      "azure_tags": {
        "environment": "dev",
        "project": "udacity",
        "owner": "Rob Foster",
        "image": "rob-packer-image"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install apache2 -y",
        "sudo bash -c 'echo HelloWorld! > /var/www/html/index.html'",
        "sudo systemctl enable apache2"
      ],
      "inline_shebang": "/bin/sh -x"
    }
  ]
}
